		<![CDATA[				     
						ORDER BY group_no DESC,  order_no  ASC ) C )
	     WHERE ( #{page } - 1 ) * #{pageSize } + 1 <= rnum AND rnum <=  #{page } * #{pageSize }
		]]> -->	
	</select>
	
