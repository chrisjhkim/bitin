<mapper namespace="board">

<select id="selectList" resultType="BoardVo" parameterType="map">
		<![CDATA[
		SELECT * 
		  FROM ( SELECT rownum as rnum, C.* 
				   FROM ( SELECT A.class_no as classNo, A.board_no as boardNo ,A.title,A.content, A.user_no as userNo, B.user_name as userName, A.view_cnt as viewCount, to_char( A.reg_date, 'yyyy-mm-dd hh:mi:ss' ) as regDate 
						   FROM b_board A, b_user B
						   WHERE A.user_no = B.user_no
		]]>
		<!-- 
		<if test="searchKeyword != ''">
			<![CDATA[				     
						     AND ( A.title LIKE '%${searchKeyword }%' OR A.content LIKE '%${searchKeyword }%' )
			]]>
